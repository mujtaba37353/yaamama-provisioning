# Server
PORT=3000
NODE_ENV=development

# PostgreSQL
DATABASE_URL=postgres://yamama:yamama_pass@localhost:5432/yamama_factory

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# API Auth
API_SECRET_KEY=dev-secret-key-change-in-production

# Store Host SSH (not needed for local dev)
STORE_HOST_IP=
STORE_HOST_SSH_USER=root
STORE_HOST_SSH_KEY_PATH=

# Control Plane
CONTROL_PLANE_URL=http://yamama-platform.local
CONTROL_PLANE_WEBHOOK_PATH=/wp-json/yamama/v1/store-callback
CONTROL_PLANE_WEBHOOK_SECRET=change-me-in-production

# Store Config
STAGING_DOMAIN=staging.yourdomain.com
MAX_STORES_PER_HOST=50
MIN_POOL_SIZE=5

# Simulation (local dev)
SIMULATE_STEPS=true
SIMULATE_STEP_DELAY_MS=1000
